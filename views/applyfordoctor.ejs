<%- include('partials/header') %>
<div class="flex min-h-screen bg-gray-100">
    <div class="ml-1/6 flex-1 h-screen overflow-y-hidden p-6 lg:p-10">
        <div id="flash-messages" class="fixed top-4 right-4 z-50 space-y-2">
            <% if (messages.success && messages.success.length > 0) { %>
                <% messages.success.forEach(function(msg) { %>
                    <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-lg shadow-md transition-opacity duration-500">
                        <p><%= msg %></p>
                    </div>
                <% }) %>
            <% } %>
        
            <% if (messages.error && messages.error.length > 0) { %>
                <% messages.error.forEach(function(msg) { %>
                    <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg shadow-md transition-opacity duration-500">
                        <p><%= msg %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>
        <div class="flex items-center justify-between mb-6">
            <div>
                <a href="/doctorRegistration"
                    class="p-3 bg-green-600 text-white rounded-md cursor-pointer hover:bg-green-700 transition-colors font-medium text-sm sm:text-base">
                    Doctor Registration ðŸ‘ˆ
                </a>
            </div>
            <h2 class="text-3xl font-semibold text-center text-blue-600">Apply as a Doctor</h2>
            <div>
                <a href="/doctor/UdocNotifications" class="relative">
                    <i class="fas fa-bell text-gray-700 text-2xl hover:text-gray-500 transition duration-200"></i>
                </a>
            </div>
        </div>
        
        <div class="w-full max-w-3xl bg-white rounded-lg shadow-xl p-8 mx-auto max-h-[80vh] overflow-y-auto">
            <form action="/doctor/doctorformSubmit" method="POST" class="space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Name -->
                    <div class="flex flex-col">
                        <label for="name" class="font-semibold text-gray-700">Name</label>
                        <input type="text" name="name" placeholder="Enter your full name" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Email -->
                    <div class="flex flex-col">
                        <label for="email" class="font-semibold text-gray-700">Email</label>
                        <input type="email" name="email" placeholder="Enter your email" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Contact No -->
                    <div class="flex flex-col">
                        <label for="contact" class="font-semibold text-gray-700">Contact No</label>
                        <input type="tel" name="contact" placeholder="Enter your contact" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Degree -->
                    <div class="flex flex-col">
                        <label for="degree" class="font-semibold text-gray-700">Degree</label>
                        <input type="text" name="degree" placeholder="Enter your degree" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Experience -->
                    <div class="flex flex-col">
                        <label for="experience" class="font-semibold text-gray-700">Experience (in years)</label>
                        <input type="number" name="experience" placeholder="Enter your experience" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Fees -->
                    <div class="flex flex-col">
                        <label for="fees" class="font-semibold text-gray-700">Fees</label>
                        <input type="number" name="fees" placeholder="Enter fees per Consultancy" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- Specialization -->
                    <div class="flex flex-col">
                        <label for="specialist" class="font-semibold text-gray-700">Specialization</label>
                        <input type="text" name="specialist" placeholder="Enter your specialization" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                </div>

                <!-- Address -->
                <div class="flex flex-col">
                    <label for="address" class="font-semibold text-gray-700">Address</label>
                    <input type="text" name="address" placeholder="Enter Address" required
                        class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                </div>

                <!-- Timings -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Start Time -->
                    <div class="flex flex-col">
                        <label for="timings[start]" class="font-semibold text-gray-700">Start Time</label>
                        <input type="time" name="timings[start]" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                    <!-- End Time -->
                    <div class="flex flex-col">
                        <label for="timings[end]" class="font-semibold text-gray-700">End Time</label>
                        <input type="time" name="timings[end]" required
                            class="border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" />
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-blue-500 text-white py-3 rounded-md font-semibold hover:bg-blue-600 transition duration-200">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
