<%- include('partials/header') %>


<div class="flex min-h-screen justify-center items-center bg-gray-100">
    <div id="flash-messages" class="fixed top-4 right-4 z-50 space-y-2">
        <% if (messages.success && messages.success.length > 0) { %>
            <% messages.success.forEach(function(msg) { %>
                <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-lg shadow-md transition-opacity duration-500">
                    <p><%= msg %></p>
                </div>
            <% }) %>
        <% } %>
    
        <% if (messages.error && messages.error.length > 0) { %>
            <% messages.error.forEach(function(msg) { %>
                <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-lg shadow-md transition-opacity duration-500">
                    <p><%= msg %></p>
                </div>
            <% }) %>
        <% } %>
    </div>
    <form action="/doctor/register" method="post"
        class="flex flex-col w-full max-w-sm sm:max-w-sm md:max-w-md lg:max-w-md h-auto border border-gray-200 rounded-lg p-6 sm:p-8 bg-white shadow-lg sm:shadow-md lg:shadow-xl">
        <h2 class="text-xl sm:text-2xl font-semibold text-gray-800 text-center mb-4 sm:mb-6">Doctor Registration</h2>
        
        <label class="text-gray-700 mt-3 sm:mt-4 font-medium" for="name">Name</label>
        <input
            class="border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 p-2 sm:p-3 mt-1 sm:mt-2 placeholder-gray-400"
            type="text" placeholder="Enter your name" name="name" required />

        <label class="text-gray-700 mt-3 sm:mt-4 font-medium" for="email">Email</label>
        <input
            class="border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 p-2 sm:p-3 mt-1 sm:mt-2 placeholder-gray-400"
            type="email" placeholder="Enter your email" name="email" required />

        <label class="text-gray-700 mt-3 sm:mt-4 font-medium" for="password">Password</label>
        <input
            class="border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 p-2 sm:p-3 mt-1 sm:mt-2 placeholder-gray-400"
            type="password" placeholder="Enter your password" name="password" required />

        <input
            class="p-2 sm:p-3 mt-4 sm:mt-6 text-white bg-blue-600 rounded-md cursor-pointer hover:bg-blue-700 transition-colors font-medium text-sm sm:text-base"
            type="submit" value="Sign Up" />

        <a class="text-blue-600 mt-3 sm:mt-4 text-center hover:underline text-sm sm:text-base" href="/doctorLogin">
            Already have an account? Login
        </a>

        <div class="mt-6 sm:mt-8 text-center">
            <a href="/"
            class="p-2 sm:p-3 bg-teal-500 text-white rounded-md cursor-pointer hover:bg-teal-700 transition-colors font-medium text-sm sm:text-base">
            CheckUp Visitor Registration ðŸ‘ˆ
         </a>
         
        </div>
    </form>
</div>

<%- include('partials/footer') %>
